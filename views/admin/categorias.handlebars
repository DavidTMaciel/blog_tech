<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>
{{#each categorias}}
    <div class="card">
        <div class="card-body">
           <h4>{{nome}}</h4> 
           <small>{{slug}}</small><br>
           <a href="/admin/categorias/editar/{{_id}}"><button class="btn btn-info mt-4">Editar</button></a>
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit"class="btn btn-danger mt-2">Deletar</button>
            </form>
        </div>
    </div>

    {{else}}
    <h4 class="mt-3">NÃ£o a categorias registradas</h4>
{{/each}}

